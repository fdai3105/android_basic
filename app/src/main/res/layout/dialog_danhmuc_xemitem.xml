<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg_white_radius26dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_header"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="200dp"
                android:text="Xem nhanh"
                android:textColor="@color/bgWhite"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnDialogClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_button_circle"
                android:text="X"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@color/bgWhite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivAnhItem"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_empty" />

                        <TextView
                            android:id="@+id/tvIDItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="ID: "
                            android:textColor="@color/textGrayy"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvTenItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="Tên sản phẩm"
                            android:textColor="@color/textGray"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDanhMucItem"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:gravity="center_vertical"
                                android:paddingStart="5dp"
                                android:text="Danh Mục"
                                android:textColor="@color/textGrayy"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvGiaItem"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginEnd="5dp"
                                android:gravity="right"
                                android:text="Giá"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="28sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="5dp">

                            <RatingBar
                                android:id="@+id/rbItem"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:background="@color/textGray" />

                            <TextView
                                android:id="@+id/tvSoLuongItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng"
                                android:textColor="@color/textGrayy"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvNgayThemItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="5dp"
                            android:paddingStart="5dp"
                            android:text="Ngày thêm:"
                            android:textColor="@color/textGrayy"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/bgWhite"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/textGray"
                            android:text="Chi tiết sản phẩm"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bgWhitee" />

                        <TextView
                            android:textColor="@color/textGray"
                            android:id="@+id/tvMoTaItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:lineSpacingExtra="5dp"
                            android:text="Mô tả Mô tả Mô tả Mô tả Mô tả Mô tả
ả Mô tả tả Mô tả Mô tả Môtả Mô tả Mô tả Mô tả Mô Mô tả Mô tả Mô tả Mô"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>