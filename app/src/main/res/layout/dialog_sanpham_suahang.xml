<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg_dialog_themhang"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="140dp"
                android:text="Sửa Sản Phẩm"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnDialogClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_button_circle"
                android:text="X"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etDialogEditTenSP"
                android:textColor="@color/textWhite"
                android:textSize="21sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Tên sản phẩm:"
                android:textColorHint="@color/textHint" />

            <EditText
                android:id="@+id/etDialogEditSoLuong"
                android:textColor="@color/textWhite"
                android:textSize="21sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Số lượng:"
                android:inputType="number"
                android:textColorHint="@color/textHint" />

            <EditText
                android:id="@+id/etDialogEditGiaSP"
                android:textColor="@color/textWhite"
                android:textSize="21sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Giá: "
                android:inputType="number"
                android:textColorHint="@color/textHint" />

            <EditText
                android:id="@+id/etDialogEditMoTaSP"
                android:textColor="@color/textWhite"
                android:textSize="21sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Mô tả: "
                android:textColorHint="@color/textHint" />
            <Button
                android:id="@+id/btnDialogEditClick"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_category"
                android:layout_gravity="center|bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>