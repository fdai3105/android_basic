<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="Ứng Dụng \n Quản Lí Bán Hàng"
        android:textColor="@color/textGray"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_button_category"
        android:gravity="center_vertical"
        android:onClick="btnSanPhamClick"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="50dp">

        <ImageView
            android:id="@+id/imv_banhang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sanpham" />

        <TextView
            style="@style/Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Sản Phẩm"
            android:textColor="@color/textGray"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_button_category"
        android:gravity="center_vertical"
        android:onClick="btnDanhMucClick"
        android:orientation="horizontal"
        android:paddingStart="45dp"
        android:paddingEnd="45dp">

        <ImageView
            android:id="@+id/imv_banhang1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_danhmuc" />

        <TextView
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Danh Mục"
            android:textColor="@color/textGray"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_button_category"
        android:gravity="center_vertical"
        android:onClick="btnNhanVienClick"
        android:orientation="horizontal"
        android:paddingStart="45dp"
        android:paddingEnd="45dp">

        <ImageView
            android:id="@+id/imv_banhang3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_nhanvien" />

        <TextView
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Nhân Viên"
            android:textColor="@color/textGray"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_button_category"
        android:gravity="center_vertical"
        android:onClick="btnInfoClick"
        android:orientation="horizontal"
        android:paddingStart="45dp"
        android:paddingEnd="45dp">

        <ImageView
            android:id="@+id/imv_banhang5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_info" />

        <TextView
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Giới thiệu"
            android:textColor="@color/textGray"
            android:textSize="36sp" />
    </LinearLayout>
</LinearLayout>