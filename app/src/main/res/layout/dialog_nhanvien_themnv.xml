<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg_dialog_themhang"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_header"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:text="Thêm Nhân Viên"
                android:textColor="@color/bgWhite"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnDialogClose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_button_circle"
                android:text="X"
                android:textColor="@color/bgWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etDialogAddTenNV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:hint="Tên nhân viên:"
                android:textColor="@color/textGray"
                android:textColorHint="@color/textHint"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/etDialogAddAnhNV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:hint="Link ảnh nhân viên"
                android:textColor="@color/textGray"
                android:textColorHint="@color/textHint"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/etDialogAddChucVuNV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:hint="Chức vụ: "
                android:textColor="@color/textGray"
                android:textColorHint="@color/textHint"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:hint="Giới tính: "
                    android:textColor="@color/textGray"
                    android:textSize="21sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbDialogSuaGioiTinhNam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:hint="Nam"
                        android:textColor="@color/textGray"
                        android:textColorHint="@color/textHint"
                        android:textSize="21sp" />

                    <RadioButton
                        android:id="@+id/rbDialogSuaGioiTinhNu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Nữ"
                        android:textColor="@color/textGray"
                        android:textColorHint="@color/textHint"
                        android:textSize="21sp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/etDialogAddDiaChiNV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:hint="Địa chỉ: "
                android:textColor="@color/textGray"
                android:textColorHint="@color/textHint"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/etDialogAddSDTNV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:hint="Số điện thoại: "
                android:inputType="phone"
                android:textColor="@color/textGray"
                android:textColorHint="@color/textHint"
                android:textSize="21sp" />

            <Button
                android:id="@+id/btnDialogAddNVClick"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="15dp"
                android:textColor="@color/textWhite"
                android:background="@drawable/bg_button_dark"
                android:text="Thêm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>